<div id="<%= dom_id employee %>">
  <p>
  <strong> <%= t('activerecord.attributes.employee.name') %>: </strong>
    <%= employee.name %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= employee.email %>
  </p>
  <p>
    <strong>Lương/Ngày:</strong>
    
    <%= number_to_currency(employee.daily_salary, unit: "VND", precision: 0, delimiter: ".", format: "%n %u") %>

  </p>


  <p>
    <strong><%= t('activerecord.attributes.employee.phone') %>: </strong>
    <%= employee.phone %>
  </p>

</div>
